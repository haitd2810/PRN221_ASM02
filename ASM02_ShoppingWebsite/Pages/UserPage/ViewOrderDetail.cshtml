@page "{id:int}"
@model ASM02_ShoppingWebsite.Pages.UserPage.ViewOrderDetailModel
@{
    ViewData["Title"] = "Order Detail";
}

<h2>Order Detail</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Order.OrderId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Order.OrderDate?.ToShortDateString()</dd>

        <dt class="col-sm-2">Total Freight</dt>
        <dd class="col-sm-10">@Model.Order.Freight</dd>
    </dl>
</div>

<h3>Order Details</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product?.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.UnitPrice * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/UserPage/ViewOrderHistory">Back to Order History</a>

