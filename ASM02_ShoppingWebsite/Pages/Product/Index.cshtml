@page
@model ASM02_ShoppingWebsite.Pages.Product.IndexModel
@{
    Layout = "_LayoutAuth";
}
<div class="container mt-4">
    <h2>Pizzas Menu</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <button class="btn btn-info" type="button">Search</button>
            </div>
        </div>
    </div>

    <!-- Pizza Cards -->
    <h4>All Pizzas</h4>
    <div class="row">
        <!-- Pizza 1 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="https://www.pizzaexpress.vn/wp-content/uploads/2018/08/dung-chao-lam-banh-pizza-ngon.jpg" class="card-img-top" alt="Capricciosa">
                <div class="card-body">
                    <h5 class="card-title">Capricciosa</h5>
                    <p class="card-text">Category: Standard</p>
                    <p class="card-text">$70.00</p>
                    <p class="card-text">A normal pizza with a taste from the forest.</p>
                    <a href="#" class="btn btn-primary">Add Pizza</a>
                </div>
            </div>
        </div>
        <!-- Pizza 2 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="https://vietair.com.vn/Media/Images/pizza-ha-noi-o-dau-ngon.jpg?w=1200&h=630&c=true" class="card-img-top" alt="Hawaii">
                <div class="card-body">
                    <h5 class="card-title">Hawaii</h5>
                    <p class="card-text">Category: Standard</p>
                    <p class="card-text">$75.00</p>
                    <p class="card-text">A nice tasting pizza from Hawaii.</p>
                    <a href="#" class="btn btn-primary">Add Pizza</a>
                </div>
            </div>
        </div>
        <!-- Pizza 3 -->
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="https://vietair.com.vn/Media/Images/pizza-ha-noi-o-dau-ngon-the-pizza-company.jpg?p=1&w=412" class="card-img-top" alt="Margarita">
                <div class="card-body">
                    <h5 class="card-title">Margarita</h5>
                    <p class="card-text">Category: Standard</p>
                    <p class="card-text">$65.00</p>
                    <p class="card-text">A basic pizza for everyone.</p>
                    <a href="#" class="btn btn-primary">Add Pizza</a>
                </div>
            </div>
        </div>
    </div>
    <style>
        .card-img-top {
            object-fit: cover; /* Ensures image covers the entire area */
            height: 200px; /* Set a uniform height for all images */
            width: 100%; /* Images take up full card width */
        }
    </style>
