@page
@model ASM02_ShoppingWebsite.Pages.UserPage.ViewOrderHistoryModel
@{
    ViewData["Title"] = "Order History";
}

<h1>Your Order History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Shipped Date</th>
            <th>Freight</th>
            <th>Ship Address</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString()</td>
                <td>@(order.ShippedDate.HasValue ? order.ShippedDate.Value.ToShortDateString() : "N/A")</td>
                <td>@order.Freight</td>
                <td>@order.ShipAddress</td>
                <td>
                    <a asp-page="./ViewOrderDetail" asp-route-id="@order.OrderId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
